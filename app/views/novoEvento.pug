extends layout

block content
    .container
    #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:57px;')
        .panel.panel-info
            .panel-heading
                h3 
                    font(color='#426874') 
                        font(face='helvetica') Insira novo evento
            .panel-body(style='padding-top:30px')
                form#loginform.form-horizontal(role='form' action="/"+user._id+'/Evento/novoEvento' method='post')
                    .input-group(style='margin-bottom: 15px')
                        span.input-group-addon
                            i.glyphicon.glyphicon-user
                        label.col-md-3.control-label(for='titulo')
                            font(color='#426874')
                                b Título
                                textarea(rows='1', cols='55', name='titulo')
                    .input-group(style='margin-bottom: 15px')
                        span.input-group-addon
                                i.glyphicon.glyphicon-user
                        label.col-md-3.control-label(for='local')
                            font(color='#426874')
                                b Local  
                                textarea(rows='1', cols='55', name='local')
                    .input-group(style='margin-bottom: 15px')
                        span.input-group-addon
                                i.glyphicon.glyphicon-user
                        label.col-md-3.control-label(for='descricao')
                            font(color='#426874')
                                b Descrição  
                                 textarea(rows='7', cols='55', name='descricao')                 
                    .form-group(style='margin-top:15px')
                        .col-md-offset-3.col-md-9
                            button#btn-signup.btn.btn-secondary(type='submit')
                                i.icon-hand-right
                                    |Adicionar Evento   
