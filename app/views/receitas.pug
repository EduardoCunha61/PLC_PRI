extends layout

block content
    .container
    #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:57px;')
        .panel.panel-info
            .panel-heading
                h3 
                    font(color='#426874') 
                        font(face='helvetica') Receitas Culinárias
            .panel-body(style='padding-top:30px')
                #login-alert.alert.alert-danger.col-sm-12(style='display:none')
                form#loginform.form-horizontal(role='form')
                    table()
                        each uc in culi
                            tr
                                th Titulo &nbsp &nbsp &nbsp
                                th Data &nbsp &nbsp &nbsp
                                th Descrição &nbsp &nbsp &nbsp
                        
                            tr
                                td= uc.titulo 
                                td= uc.data 
                                td= uc.descricao
                         
                    .form-group(style='margin-top:10px')
                    .col-sm-12.controls
                        a#btn-login.btn.btn-secondary(href= "/"+user._id+'/ReceitasCulinarias/novaReceita' ) Adicionar Receita 